        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
	// Se o valor da "integration_state" for o correspondente ao de 4 ou 7, mostra uma mensagem de error com o valor do campo "integration_error_message"
    if (newValue === '') {
        return;
    }
		if(newValue === "4" || newValue === "7"){
			var mediaName = g_form.getValue("title");
			var errorMessage = g_form.getValue("integration_error_message");
			g_form.addErrorMessage(mediaName + " " + errorMessage + "." );
	} else {
		g_form.clearMessages();
   }
}

]]></script>
